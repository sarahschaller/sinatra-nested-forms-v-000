<h1>Pirate</h1>
<h1>Name: <%= @pirate.name %></h1>
<h2>Weight: <%= @pirate.weight %></h2>
<h2>Height: <%= @pirates.height %></h2>


<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <h4>Name: <%= ship.name %></h4>
    <h4>Type: <%= ship.type %></h4>
    <h4>Booty: <%= ship.booty %></h4>
  </div>
  <% end %>

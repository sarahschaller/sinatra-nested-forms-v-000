<h1>Pirate</h1>
<h2>Name: <%= @pirate.name %></h2>
<h4>Weight: <%= @pirate.weight %></h4>
<h4>Height: <%= @pirate.height %></h4><br>


<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <h4>Name: <%= ship.name %></h4>
    <h4>Type: <%= ship.type %></h4>
    <h4>Booty: <%= ship.booty %></h4><br>
  </div>
  <% end %>
